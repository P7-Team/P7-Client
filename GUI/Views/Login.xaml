<Page x:Class="GUI.Views.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GUI.Views"
      xmlns:viewModels="clr-namespace:GUI.ViewModels"
      mc:Ignorable="d"
      Title="Login" Height="450" Width="800">
    
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">
                Sign In
            </TextBlock>
        
            <!-- Box for username -->
            <TextBox Text="{Binding Path=Username}" />
            
            <!-- Box for password  -->
            <TextBox Text="{Binding Path=Password}"/>
            
            <!-- Login button -->
            <Button Content="Login" Click="GotoMainPage"/>
            
            <!-- Create new user button  -->
            <Button Content="Create New User" Click="GotoCreateUserPage"/>
            
            
            <TextBlock Text="{Binding Path=LoginStatus}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
