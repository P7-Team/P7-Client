<Page x:Class="GUI.Views.CreateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GUI.Views"
      xmlns:viewModels="clr-namespace:GUI.ViewModels"
      mc:Ignorable="d"
      Title="CreateUser" Height="450" Width="800">
    
    <Page.DataContext>
        <viewModels:CreateUserViewModel />
    </Page.DataContext>
    
    <Grid>
        <StackPanel Width="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">
                Create New User
            </TextBlock>
        
            <!-- Box for username -->
            <TextBox Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged}" TextChanged="UsernameBoxChanged"/>
            
            <!-- Box for password  -->
            <PasswordBox PasswordChanged="PasswordBox1Changed"/>
            
            <!-- Box for second password  -->
            <PasswordBox PasswordChanged="PasswordBox2Changed"/>
            
            <!-- Create new account button  -->
            <Button Content="Create" Click="GotoLoginPage"/>
        </StackPanel>
    </Grid>
</Page>
